<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexander.imperiumromanum.MainScreen"
    android:weightSum="1">

    <TextView
        android:text="1 год правления"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Имперская казна: 0 денариев"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnOrderPreserved="false"
        android:columnCount="2"
        android:rowCount="6"
        android:layout_centerInParent="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout2">

        <TextView
            android:text="Золото, кг"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:text="Земля, сальт"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:text="Зерно, тонн"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:text="Рабы, тыс. душ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:text="Легионеры, сотни чел."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:text="Запасы"
            android:layout_width="119dp"
            android:layout_height="26dp"
            android:id="@+id/textView7"
            android:layout_row="0"
            android:layout_column="1"
            android:textAlignment="center" />

        <TextView
            android:text="Название"
            android:layout_width="174dp"
            android:layout_height="26dp"
            android:id="@+id/textView6"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center" />

    </GridLayout>

    <Button
        android:text="Сенат"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/gridLayout2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView4"
        android:layout_marginEnd="20dp" />

    <Button
        android:text="Колизей"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView1" />

    <Button
        android:text="Форум"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Править дальше"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView1"
        android:layout_marginBottom="22dp" />

    <TextView
        android:text="Римская империя"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Инфо"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView1" />

    <Button
        android:text="Выход"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true" />


</RelativeLayout>
